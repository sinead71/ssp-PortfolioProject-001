extends layout

block content
    div.row
        div.col-md-4.col-md-offset-3
            h1 Log In    
                form(method='post', action='/logIn')
                    div.form-group
                        label(for='username') 
                        input#username.form-control(type='text', placeholder='Username', name='username', autofocus)
                    input.btn.btn-success(type='submit', value='login')
        